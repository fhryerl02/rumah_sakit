<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        /* Reset default browser styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* General body styling */
body {
    font-family: Arial, sans-serif;
    line-height: 1.6;
    background-color: #f4f4f9;
    color: #333;
    padding: 20px;
}

/* Header styling */
header {
    background: #007bff;
    color: white;
    padding: 10px 0;
    text-align: center;
    margin-bottom: 20px;
}

header h1 {
    font-size: 24px;
}

/* Main content styling */
main {
    max-width: 1200px;
    margin: 0 auto;
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* Form styling */
form {
    margin-top: 20px;
    padding: 20px;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
}

form input,
form select,
form textarea {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

form button {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    width: 100%;
}

form button:hover {
    background-color: #0056b3;
}

/* Button styling for actions */
.action-button {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    margin-right: 5px;
    display: inline-block; /* Ensure links are displayed as buttons */
}

.action-button:hover {
    background-color: #0056b3;
}

/* Styling for reservasi/create.ejs */
.create-reservasi-page h2 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #333;
}

.create-reservasi-page form {
    max-width: 600px;
    margin: 0 auto;
    background: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.create-reservasi-page form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
}

.create-reservasi-page form select {
    width: 100%;
    padding: 8px;
    margin-bottom: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

.create-reservasi-page form button {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    width: 100%;
}

.create-reservasi-page form button:hover {
    background-color: #0056b3;
}
    </style>
</head>
<body>
    <h2>Tambah Reservasi</h2>
<form action="/reservasi/store" method="POST">
    <label for="no_rm">Pasien:</label>
    <select name="no_rm" id="no_rm" required>
        <% if (pasien && Array.isArray(pasien)) { %>
            <% pasien.forEach(p => { %>
                <option value="<%= p.no_rm %>"><%= p.nama_pasien %></option>
            <% }) %>
        <% } else { %>
            <option value="">Tidak ada pasien tersedia</option>
        <% } %>
    </select>

    <label for="id_poli">Poli:</label>
    <select name="id_poli" id="id_poli" required>
        <% if (poli && Array.isArray(poli)) { %>
            <% poli.forEach(pl => { %>
                <option value="<%= pl.id_poli %>"><%= pl.nama_poli %></option>
            <% }) %>
        <% } else { %>
            <option value="">Tidak ada poli tersedia</option>
        <% } %>
    </select>

    <label for="id_dokter">Dokter:</label>
    <select name="id_dokter" id="id_dokter" required>
        <% if (dokter && Array.isArray(dokter)) { %>
            <% dokter.forEach(d => { %>
                <option value="<%= d.id_dokter %>"><%= d.nama_dokter %></option>
            <% }) %>
        <% } else { %>
            <option value="">Tidak ada dokter tersedia</option>
        <% } %>
    </select>

    <label for="no_antrian">No. Antrian:</label>
    <select name="no_antrian" id="no_antrian" required>
        <% if (antri && Array.isArray(antri)) { %>
            <% antri.forEach(a => { %>
                <option value="<%= a.no_antrian %>"><%= a.no_antrian %> - <%= a.tanggal %> <%= a.jam %></option>
            <% }) %>
        <% } else { %>
            <option value="">Tidak ada antrian tersedia</option>
        <% } %>
    </select>

    <button type="submit">Simpan</button>
</form>
</body>
</html>